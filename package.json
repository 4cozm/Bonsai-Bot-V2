{
    "name": "bonsai-bot-v2",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "node ./infra/scripts/dev-pm2.js",
        "start": "pm2 start ./infra/pm2/ecosystem.config.cjs --env production && pm2 logs",
        "stop": "pm2 stop all",
        "restart": "pm2 restart all",
        "logs": "pm2 logs",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --passWithNoTests",
        "test:cov": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --passWithNoTests",
        "lint": "eslint .",
        "format:check": "prettier . --check",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate deploy"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "cross-env": "^7.0.3",
        "dotenv": "^17.2.3",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^17.2.0",
        "jest": "^30.0.0",
        "jsdoc": "^4.0.5",
        "pm2": "^6.0.14",
        "prettier": "^3.8.1",
        "prisma": "6.19.2"
    },
    "dependencies": {
        "@prisma/client": "6.19.2",
        "mysql2": "^3.16.3"
    }
}
